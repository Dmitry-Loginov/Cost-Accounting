@model IEnumerable<Cost_Accounting_2._0.Models.Bill>

@{
    ViewData["Title"] = "Index";
}

<h1>Bills</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.StartAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            @if (User.IsInRole(Role.Admin.ToString()))
            {
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @if (item.TypeBill.Type == TypeBills.Active.ToString())
            {
                <td> <input type="button" value="Balance" class="btn btn-primary" onclick="getAmount(@item.Id, this);" /></td>
                <td id="@item.Id">
                </td>
            }
            else
            {
                <td></td>
                <td></td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @if (User.IsInRole(Role.Admin.ToString()))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
            }
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
