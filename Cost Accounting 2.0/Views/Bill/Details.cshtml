@model Cost_Accounting_2._0.Models.Bill

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Bill</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TypeBill)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypeBill.Type)
        </dd>
        @if (Model.TypeBill.Type == TypeBills.Active.ToString())
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StartAmount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StartAmount)
            </dd>
        }
        @if (User.IsInRole(Role.Admin.ToString()))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.UserName)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
